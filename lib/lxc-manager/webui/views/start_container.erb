<h1 class="page-header">Start Container</h1>

<h4>Are you sure to start <%= container.name %> ?</h4>

<form method="POST" action="/start_container/<%= container.id %>">
	<div class="form-group">
		<label for="host_id" class="control-label">Host</label>
		<select size="1" class="form-control" id="host_id" name="host_id">
			<% hosts.each{ |host| %>
				<option value="<%= host.id %>"><%= host.name %></option>
			<% } %>
		</select>
	</div>

	<a type="button" class="btn btn-default" href="javascript:history.back();">Cancel</a>
	<button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#waitReloadModal">Submit</button>
</form>
