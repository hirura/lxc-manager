<h1 class="page-header">Edit <%= interface.container.name %>'s Interface <%= interface.name %></h1>

<form method="POST" action="/edit_interface/<%= interface.id %>">
	<div class="form-group">
		<label for="name" class="control-label">Name</label>
		<input type="text" class="form-control" id="name" name="name" value="<%= name rescue interface.name %>">

		<label for="network_id" class="control-label">Network</label>
		<select size="1" class="form-control" id="network_id" name="network_id">
			<% networks.each{ |network| %>
				<% selected = if network_id.to_i == network.id then "selected" else "" end rescue if network.id == interface.network.id then "selected" else "" end %>
				<option value="<%= network.id %>" <%= selected %>><%= network.name %> (<%= network.v4_address %>/<%=network.v4_prefix %>)</option>
			<% } %>
		</select>

		<label for="v4_address" class="control-label">IPv4 Address</label>
		<input type="text" class="form-control" id="v4_address" name="v4_address" value="<%= v4_address rescue interface.v4_address %>">
	</div>

	<a type="button" class="btn btn-default" href="javascript:history.back();">Cancel</a>
	<button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#waitReloadModal">Submit</button>
</form>
