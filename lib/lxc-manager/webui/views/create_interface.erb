<h1 class="page-header">Create <%= container.name %>'s Interface</h1>

<form method="POST" action="/create_interface/<%= container.id %>">
	<div class="form-group">
		<label for="name" class="control-label">Name</label>
		<input type="text" class="form-control" id="name" name="name" value="<%= name rescue '' %>">

		<label for="network_id" class="control-label">Network</label>
		<select size="1" class="form-control" id="network_id" name="network_id">
			<% networks.each{ |network| %>
				<option value="<%= network.id %>"><%= network.name %></option>
			<% } %>
		</select>

		<label for="v4_address" class="control-label">IPv4 Address</label>
		<input type="text" class="form-control" id="v4_address" name="v4_address" value="<%= v4_address rescue '' %>">
	</div>

	<a type="button" class="btn btn-default" href="javascript:history.back();">Cancel</a>
	<button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#waitReloadModal">Submit</button>
</form>
